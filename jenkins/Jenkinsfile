pipeline {
  agent any

  environment {
    IMAGE_NAME = 'rani19/backend'
    TAG = "build-${env.BUILD_NUMBER}"
    DOCKER_CREDENTIALS_ID = 'docker-hub-creds'
    DEV_REPO_URL = 'https://github.com/RaniSaed/smart-retail-dev.git'
    CONFIG_REPO_URL = 'https://github.com/RaniSaed/smart-retail-config.git'
    PRIMARY_NS = 'default'
    KUBECONFIG = '/root/.kube/config'
  }

  stages {
    stage('✅ Jenkinsfile Sanity Check') {
      steps {
        echo '✅ Jenkinsfile loaded and pipeline started successfully!'
      }
    }

    stage('📥 Clone Dev Repo') {
      steps {
        dir('dev') {
          git url: "${DEV_REPO_URL}", branch: 'main'
        }
      }
    }

    stage('🔍 Lint Flask Backend') {
      steps {
        dir('dev/backend') {
          sh '''
            echo "📦 Installing flake8..."
            pip install flake8 > /dev/null || true
            echo "🔎 Running flake8 strict errors..."
            flake8 . --count --select=E9,F63,F7,F82 --show-source --statistics || true
            echo "📊 Running flake8 full stats..."
            flake8 . --count --exit-zero --max-complexity=10 --max-line-length=127 --statistics
          '''
        }
      }
    }

    stage('🔍 Lint React Frontend') {
      steps {
        dir('dev/frontend') {
          sh '''
            echo "📦 Installing npm dependencies..."
            npm ci > /dev/null || true
            echo "🔎 Running ESLint on frontend code..."
            npx eslint . --ext .ts,.tsx || true
          '''
        }
      }
    }

    stage('🧪 Run Flask Unit Tests') {
      steps {
        dir('dev/backend') {
          sh '''
            echo "📦 Installing backend dependencies..."
            pip install -r requirements.txt > /dev/null || true
            echo "🧪 Running backend unit tests..."
            python3 -m unittest discover -s tests || true
          '''
        }
      }
    }
  }

  post {
    success {
      echo '🎉 CI checks passed successfully!'
    }
    failure {
      echo '❌ CI checks failed. Please review logs.'
    }
  }
}
