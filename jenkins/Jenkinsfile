pipeline {
  agent any

  environment {
    DEV_REPO_URL = 'https://github.com/RaniSaed/smart-retail-dev.git'
  }

  stages {
    stage('🖐 Echo Hello') {
      steps {
        echo '👋 Hello from Jenkins!'
      }
    }

    stage('📥 Clone Dev Repo') {
      steps {
        dir('dev') {
          git url: "${DEV_REPO_URL}", branch: 'main'
        }
      }
    }

    stage('📂 List Files') {
      steps {
        dir('dev') {
          sh 'ls -la'
        }
      }
    }
  }

  post {
    success {
      echo '✅ Pipeline ran successfully!'
    }
    failure {
      echo '❌ Pipeline failed!'
    }
  }
}
